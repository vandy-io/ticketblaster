    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Puppeteer",
            "program": "${workspaceFolder}/honk.js",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": ["--inspect-brk"], // Enables debugging
            "env": {
              "PUPPETEER_EXECUTABLE_PATH": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome" // Optional: Specify custom Chrome/Chromium path
            },
            "console": "integratedTerminal"
          }
    ]
}